<h1><%= @listing.title %> </h1> 

<h2><%= @listing.title %></h2>
    <br>
    <br> 
    <%= @listing.content %>
    <br> 
    <br>
    <p>Location: <%= @listing.location.name %></p>
    <p>Date/Time: <%= @listing.date_time.strftime("%b %e, %l:%M %p") %></p>

    <% if !authored_by_user?(@listing) %>

            <p> Author: <%= link_to @listing.author.name, user_path(@listing.author) %></p>
        <% else %> 
            <p> Author: self </p>
    <% end %> 
    <p> Posted on: <%= @listing.created_at.strftime("%b %e, %l:%M %p") %></p>

    <% if !self_request?(@listing) %> 
            <p><%= link_to "Click to Join the Fun", new_listing_event_path(@listing) %>
            <br>
            <br>
    <% end %>

<% if authorized_to_edit_listing?(@listing) %>

<%= link_to "Edit", edit_listing_path(@listing) %>
<%= button_to "Delete", listing_path(@listing), method: :delete, data: { confirm: 'Are you sure you want to delete this record?' }%> 

<% end %>
