<h1> Welcome, <%= @user.name %></h1>

<h4>My pet(s):</h4> 
<ul> 
<% @user.pets.each do |p| %>
     <li><%= p.name %></li>
     <% end %>
 </ul>

 <h3> Upcoming Doggy Hangouts </h3>

 <% @user.received_requests.each do |r| %> 
    <% if r.accept %> 
        <p> Appointment with: </p> 
        <ul>
        <li>Owner: <%= r.user.name %></li>
        <li>Dog Pal: <%= r.pet.name %></li>
        <li>On: <%= r.date %></li>
        </ul> 
    <% else %>

    <i>None at this time </i> 

    <%end %> 

<% end %> 

<h4>Requests Received</h4>

<i>pending approval </i>

    <ul> 
    <% @user.received_requests.each do |r| %>
        <% if r.accept.nil? %> 
            <li>Message: <%= link_to r.message, request_path(r) %> - Received on <%= r.created_at %></li>
        <% end %> 
    <% end %> 
    </ul>
    <p>- None at this time</p>


<h4>Requests Sent</h4> 
<ul> 

<% @user.requests.each do |p| %>
    <li>Message: <%= p.message %> - Sent on: <%= p.created_at %> </li>
    <% end %>
</ul> 


