<%= render partial: "layouts/errors", locals: {object: @pet} %>

<%= form_for(@pet) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :age %>
    <%= f.select :age, ["puppy","young adult","adult", "senior"] %>
    <br>
    <br>
    <%= f.label :size %>
    <%= f.select :size, ["Small","Medium","Large"] %>
    <br>
    <br>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
    <%= f.submit %>
    <% end %>