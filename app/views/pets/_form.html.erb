<%= render partial: "layouts/errors", locals: {object: @pet} %>

<%= form_for(@pet) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br>
    <br>
    <%= f.label :size %>
    <%= f.text_field :size %>
    <br>
    <br>
    <%= f.submit %>
    <% end %>