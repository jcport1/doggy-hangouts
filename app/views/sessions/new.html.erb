<h1> Log In </h1>

<%= flash[:error] %>
<br>
<br> 

<%= form_for(:user) do |f| %>
    <div class="field form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>
    </div>
    <br>
    <br>
    <div class="field form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %> 
    </div>
    <br>
    <br>
    <div class="field form-group">
    <%= f.submit "Log In", class:'btn btn-success' %>
    </div>
<% end %> 