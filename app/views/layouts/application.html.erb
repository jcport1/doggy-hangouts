<!DOCTYPE html>
<html>
  <head>
    <title>DoggyHangouts</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container-fluid">

  <% if logged_in? %> 

  <div class="container">
  
  <nav class="navbar navbar-dark bg-dark">

  <a class="navbar-brand" href="/users/<%= current_user.id %>">My Profile</a>
  <a class="navbar-brand" href="/locations">Events by Location</a>
  <a class="navbar-brand" href="/listings">Listings</a>
  <a class="navbar-brand" href="/users/<%= current_user.id%>/listings">My Listings</a>
  <a class="navbar-brand" href="/listings/new">Create New Listing</a>
  <a class="navbar-brand" href="/logout">Log Out</a>

  </nav> 

  </div>

  <% end %> 

  <% if flash[:notice] %> 
  <div class="container">
  <div class="alert alert-success" role="alert"> 
    <%= flash[:notice] %>
    </div>
    </div>
    <% end %> 

    <% if flash[:error] %> 
  <div class="container">
  <div class="alert alert-danger" role="alert"> 
    <%= flash[:error] %>
  </div></div> 

  <% end %> 

  <div> 
  <%= @error %>
  </div> 

  
    <div class="container">
      <%= yield %>
    </div>

  
  </body>
</html>
